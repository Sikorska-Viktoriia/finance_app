            height: adaptive_dp(125) if not is_small_screen else adaptive_dp(100)

            StyledTextInput:
                id: email
                hint_text: "Електронна пошта"

            PasswordTextInput:
                id: password_field
                hint_text: "Пароль"

        StyledButton:
            text: "Увійти"
