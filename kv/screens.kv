                color: 0.2, 0.2, 0.2, 1
                font_size: adaptive_font(14)
            StyledButton:
                text: "Зареєструватися"
                background_color: 0.8, 0.8, 0.8, 0
                color: PRIMARY_PINK
                font_size: adaptive_font(16)
                bold: True
                size_hint_x: 0.5
                size_hint_y: None
                height: adaptive_dp(40)
                on_press: root.manager.current = 'registration_screen'

<HomeTab>:
    name: "home_tab"
    canvas.before:
        Color:
            rgba: 0.9, 0.95, 1, 1  # LIGHT_BLUE - основний фон
        Rectangle:
            pos: self.pos
            size: self.size
    
    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(15)
        
        # Верхня частина - привітання
        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: dp(100)
            spacing: dp(8)
            
            Label:
                id: welcome_label
                text: "Ласкаво просимо!"
                font_size: dp(24)
                bold: True
                color: 0.8, 0.2, 0.4, 1  # PRIMARY_PINK
                size_hint_y: None
                height: dp(40)
                text_size: self.width, None
                halign: 'center'
            
            Label:
                id: balance_label
                text: "Загальний баланс: 0.00 $"
                font_size: dp(20)
                color: 0.2, 0.4, 0.8, 1  # PRIMARY_BLUE
                size_hint_y: None
                height: dp(35)
                text_size: self.width, None
                halign: 'center'
        
        # Фільтр банків з випадаючим списком
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(45)
            spacing: dp(10)
            
            Label:
                text: "Фільтр банку:"
                font_size: dp(16)
                color: 0.2, 0.4, 0.8, 1
                size_hint_x: 0.3
                text_size: self.width, None
                halign: 'left'
                valign: 'middle'
            
            Spinner:
                id: bank_spinner
                text: "Всі банки"
                values: ["Всі банки"]
                size_hint_x: 0.7
                background_color: 1, 1, 1, 0.8  # БІЛИЙ ФОН
                color: 0.2, 0.4, 0.8, 1  # СИНІЙ ТЕКСТ
                background_normal: ''
                background_down: ''
                # Прибираємо стандартну стрілку/квадратик
                canvas.after:
                    Clear
                canvas.before:
                    Color:
                        rgba: 0.2, 0.4, 0.8, 1  # СИНІЙ ФОН
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [dp(5),]
                on_text: root.change_bank_filter(self.text)
        
        # Карусель з картками - контейнер має блакитний фон
        BoxLayout:
            id: cards_container
            size_hint_y: 0.45
            padding: [dp(10), 0]
            canvas.before:
                Color:
                    rgba: 0.9, 0.95, 1, 1 
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [dp(15),]

        # Історія транзакцій
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.35
            padding: [dp(15), dp(15), dp(15), dp(15)]
            spacing: dp(10)
            canvas.before:
                Color:
                    rgba: 1, 0.9, 0.95, 1  # LIGHT_PINK
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [dp(15),]
            
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: dp(35)
                
                Label:
                    text: "Останні транзакції"
                    font_size: dp(18)
                    bold: True
                    color: 0.8, 0.2, 0.4, 1
                    text_size: self.width, None
                    halign: 'left'
                
                Label:
                    id: transactions_count
                    text: ""
                    font_size: dp(14)
                    color: 0.2, 0.4, 0.8, 1
                    text_size: self.width, None
                    halign: 'right'
            
            ScrollView:
                size_hint_y: 1
                do_scroll_x: False
                bar_width: dp(8)
                bar_color: 0.2, 0.4, 0.8, 1
                bar_inactive_color: 0.2, 0.4, 0.8, 0.5
                
                BoxLayout:
                    id: history_container
                    orientation: 'vertical'
                    spacing: dp(8)
                    size_hint_y: None
                    height: self.minimum_height
                    padding: [dp(10), dp(5), dp(10), dp(5)]
                    size_hint_x: 1
<AnalyticsTab>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(15)
        spacing: dp(15)

        Label:
            text: 'Аналітика витрат'
            font_size: dp(24)
            bold: True
            color: root.primary_pink
            size_hint_y: None
            height: dp(40)

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
