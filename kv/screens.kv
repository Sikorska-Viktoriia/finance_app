                    Label:
                        text: 'Мої конверти'
                        font_size: dp(18)
                        bold: True
                        color: root.dark_text
                        size_hint_y: None
                        height: dp(25)

                    GridLayout:
                        id: envelopes_container
                        cols: 3
                        spacing: dp(10)
                        size_hint_y: None
                        height: self.minimum_height

                # Секція статистики
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: dp(10)

                    Label:
                        text: 'Статистика'
                        font_size: dp(18)
                        bold: True
                        color: root.dark_text
                        size_hint_y: None
                        height: dp(25)

                    GridLayout:
                        id: stats_container
                        cols: 2
                        spacing: dp(10)
                        size_hint_y: None
                        height: self.minimum_height

                # Секція діаграм
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: dp(10)

                    Label:
                        text: 'Візуалізація'
                        font_size: dp(18)
                        bold: True
                        color: root.dark_text
                        size_hint_y: None
                        height: dp(25)

                    BoxLayout:
                        id: charts_container
                        orientation: 'vertical'
                        spacing: dp(10)
                        size_hint_y: None
                        height: self.minimum_height



<SavingsTab>:
